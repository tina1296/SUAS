<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/squat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="53dp"
        android:text="squat"
        app:layout_constraintBottom_toTopOf="@+id/jull"
        app:layout_constraintEnd_toEndOf="@+id/jull"
        app:layout_constraintStart_toStartOf="@+id/jull"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jull"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:text="줄넘기"
        app:layout_constraintBottom_toTopOf="@+id/flank"
        app:layout_constraintEnd_toEndOf="@+id/flank"
        app:layout_constraintStart_toStartOf="@+id/flank"
        app:layout_constraintTop_toBottomOf="@+id/squat" />

    <Button
        android:id="@+id/flank"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:text="flank"
        app:layout_constraintBottom_toTopOf="@+id/running"
        app:layout_constraintEnd_toEndOf="@+id/running"
        app:layout_constraintStart_toStartOf="@+id/running"
        app:layout_constraintTop_toBottomOf="@+id/jull" />

    <Button
        android:id="@+id/running"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="203dp"
        android:text="running"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/back1"
        app:layout_constraintStart_toStartOf="@+id/stop"
        app:layout_constraintTop_toBottomOf="@+id/flank" />

    <Button
        android:id="@+id/back1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="28dp"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="@+id/stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stop"
        app:layout_constraintTop_toTopOf="@+id/stop" />

    <Button
        android:id="@+id/stop"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="47dp"
        android:text="스탑워치"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/back1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>